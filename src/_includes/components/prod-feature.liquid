<div class="product-feature" data-style="{{ featureStyle }}" data-image-placement="{{ featureImagePlacement }}">
    <div class="image-holder" {% if floatImage %} data-float-image="{{ floatImage }}" {% endif %}>
        {% capture imgUrl %}
        {% sanityImageUrl featureImage %}
        {% endcapture %}

        {% image imgUrl, featureImage.altText %}
    </div>
    <div class="content flow">
        <p class="secondary-title">{{ secondaryTitle }}</p>
        <p class="h3">{{ featureTitle }}</p>
        <p>{{ featureText }}</p>
        {% if featureStyle == "large" %}
        {% if feature.link %}
        <p>
            <a class="text-link secondary" href="{{ feature.link.url }}">{{ feature.link.text }}</a>
        </p>
        {% endif %}
        {% endif %}
    </div>
</div>