{% if ctaCols %}
{% assign cols = ctaCols %}
{% else %}
{% assign cols = 1 %}
{% endif %}

<section class="cta" data-cols="{{ cols }}">
    <div class="content">
        <p class="h1">{{ ctaTitle }}</p>
        <p>{{ ctaText }}</p>
        <div class="button-group">
            <a class="button primary" href="{{ ctaLink.url }}">{{ ctaLink.text }}</a>
            {% if ctaLinkSecondary %}
            <a class="button secondary" href="{{ ctaLinkSecondary.url }}">{{ ctaLinkSecondary.text }}</a>
            {% endif %}
        </div>
    </div>
</section>