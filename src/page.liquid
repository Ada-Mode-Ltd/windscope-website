---
layout: site
pagination:
    data: pages
    alias: thisPage
    size: 1
permalink: /{{ thisPage.slug.current | slug }}/index.html
---
{% for content in thisPage.body %}
    {% if content._type == 'pageHeading' %}
    <section>
        <div class="wrapper flow text-page-header">
            {% if content.showDate %}
                <p class="text--small timestamp">Last updated: <time datetime="{{ thisPage._updatedAt | w3cDate }}">{{ thisPage._updatedAt | dateFormat }}</time></p>
            {% endif %}
            <h1>{{ thisPage.title }}</h1>
        </div>
    </section>        
    {% endif %}

    {% if content._type == 'blockContent' %}
    <div class="wrapper">
        <article class="text-page flow">
            {% portableText content.content %}
        </article>
    </div>
    {% endif %}
{% endfor %}